<%= form_for(@blogpost, :html => { :multipart => true }) do |f| %>
<%= render 'shared/error_messages', :object => f.object %> 
<div class="field">
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :subtitle %><br />
  <%= f.text_field :subtitle %>
</div>
<div class="field">
  <%= f.label :content %><br />
  <%= f.text_area :content %>
</div>
<div class="field">
  <%= f.label :Photo %><br />
  <%= f.file_field :photo %>
</div>
<div class="actions">
  <%= f.submit "Submit" %>
</div>
<% end %>
